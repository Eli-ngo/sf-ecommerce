{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="bg-neutral-600 flex flex-col justify-center items-center px-8 pt-6 pb-8 w-full h-screen">

    {{ form_start(registrationForm, {'attr': {'class': 'registrationForm'}}) }}
        <h1 class="font-bold text-4xl text-white text-center mb-10">Inscription</h1>
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.firstName) }}
        {{ form_row(registrationForm.lastName) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-lg btn-primary font-bold bg-green-300 py-2 px-2 border-2 border-black rounded-xl">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
