{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold">Accueil (produits)</h1>
    {% if products is not empty %}
        <table>
            <thead>
                <tr>
                    <th>Nom</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                <tr>
                    <td>
                        <a href="{{ path('product_detail', {'id': product.id}) }}" class="btn btn-primary">{{ product.name }}</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun produit</p>
    {% endif %}

