{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="bg-slate-100 flex justify-center items-center px-8 pt-6 pb-8 w-full h-screen">
    <form method="post" class="bg-white rounded-xl px-8 pt-6 pb-4 mt-8 mb-2 w-2/6 h-4/6 flex flex-col justify-between">
    {% if error %}/
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

        <h1 class="text-4xl font-bold text-center">Connexion</h1>
        <div>
            <div class="flex flex-col mb-8">
                <label for="inputEmail" class="font-bold text-xl">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control border-b-2 border-black px-2 py-2" autocomplete="email" required autofocus placeholder="Votre adresse email" >
            </div>
            <div class="flex flex-col">
                <label for="inputPassword" class="font-bold text-xl">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control border-b-2 border-black px-2 py-2" autocomplete="current-password" required placeholder="Votre mot de pass">
            </div>
        </div>
        <div class="flex flex-col items-center gap-2">
            <button class="btn btn-lg btn-primary font-bold bg-green-300 py-2 px-2 border-2 border-black rounded-xl" type="submit">Se connecter</button>
            <h2 class="text-xl">Pas encore de compte ?</h2>
            <a href="{{ path('app_register') }}" class="font-bold">Cr√©er un compte</a>
        </div>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

</form>
</div>
{% endblock %}
